mixin logo(...variants)
  a.logo(href= pageClass === 'index-page' ? false : 'index.html')&attributes(attributes)
    each variant in variants
      case variant
        when 'short'
          svg.logo__image.logo__image--short(width='74' height='23' role='img' aria-label='Логотип в виде напдиси «PINK».')
            use(href='img/logo.svg#short')
        when 'basic'
          svg.logo__image.logo__image--basic(width='145' height='40' role='img' aria-label='Логотип в виде напдиси «PINK» и очков.')
            use(href='img/logo.svg#basic')
        when 'full'
          svg.logo__image.logo__image--full(width='147' height='40' role='img' aria-label='Логотип в виде напдиси «PINK» и очков, украшенных звёздочками.')
            use(href='img/logo.svg#full')

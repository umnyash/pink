block variables

doctype html
html.page(class= pageClass lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='preload' href='fonts/open-sans-300.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='preload' href='fonts/open-sans-400.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='preload' href='fonts/open-sans-700.woff2' as='font' type='font/woff2' crossorigin)
    block styles
      link(rel='stylesheet' href='css/style.min.css')
    if (pageClass === 'index-page')
      script(src='https://api-maps.yandex.ru/2.1/?apikey=e6c045b8-c60b-415c-82d4-b4adf6e237da&lang=ru_RU')
    title= title
    link(rel='icon' href='favicon.ico')
    link(rel='icon' href='img/favicons/favicon.svg' type='image/svg+xml')
    link(rel='apple-touch-icon' href='img/favicons/favicon-180.png')
    link(rel='manifest' href='manifest.webmanifest')
    meta(name='description' content='Официальный сайт мобильного приложения PINK')
    meta(name='keywords' content='PINK, розовый фотофильтр, наподобие инстаграм, instagram, фоторедактор, знакомства, общение, равзлечения, веселье')
  body.page__body
    include ../components/components
    .page__inner
      +main-header(class='page__main-header')
      main.page__content
        block content
      +main-footer(class='page__main-footer')
    block modals
    block scripts
      script(src='js/script.min.js')
